{
  "type": "AdaptiveCard",
  "id": "PointOfInterestViewCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Left",
                  "spacing": "None",
                  "size": "Large",
                  "weight": "Bolder",
                  "color": "Accent",
                  "text": "{Name}"
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "text": "{Categories[0]} · {Rating} ⭐ (93) · {Price} 💲",
                  "isSubtle": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "Dark",
                  "text": "{Street}, {City}",
                  "isSubtle": true,
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "spacing": "None",
                  "color": "Dark",
                  "text": "{Hours}",
                  "isSubtle": true,
                  "wrap": true
                }
              ],
              "width": 90
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "Image",
          "url": "{ImageUrl}"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Find a route",
      "data": {
        "event": {
          "name": "POI.ActiveLocation",
          "text": "Find a route",
          "value": "{Name}"
        }
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "speak": "{OptionNumber}: {Name} is located at {Street}"
}