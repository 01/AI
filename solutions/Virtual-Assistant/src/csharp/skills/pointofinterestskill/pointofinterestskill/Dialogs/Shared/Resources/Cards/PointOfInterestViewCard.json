{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "speak": "{OptionNumber}: {Name} is located at {AddressLine}",
  "id": "PointOfInterestViewCard",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "horizontalAlignment": "center",
          "type": "Image",
          "url": "{ThumbnailImageUrl}"
        },
        {
          "size": "medium",
          "text": "{Name}",
          "type": "TextBlock"
        },
        {
          "size": "medium",
          "text": "{Address}",
          "type": "TextBlock",
          "weight": "lighter",
          "wrap": true
        }
      ]
    },
    {
      "type": "Container",
      "separator": "true",
      "style": "emphasis",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": 35,
              "items": [
                {
                  "text": "Ask me like this:",
                  "type": "TextBlock",
                  "weight": "default",
                  "size": "default"
                }
              ]
            },
            {
              "type": "Column",
              "width": 65,
              "items": [
                {
                  "text": "*Find the fastest route to  {Name}*",
                  "type": "TextBlock",
                  "wrap": true,
                  "horizontalAlignment": "right"
                },
                {
                  "text": "*Show directions to {AddressLine}*",
                  "type": "TextBlock",
                  "wrap": true,
                  "horizontalAlignment": "right"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Find a route",
      "data": {
        "event": {
          "name": "POI.ActiveLocation",
          "text": "Find a route",
          "value": "{Name}"
        }
      }
    }
  ]
}